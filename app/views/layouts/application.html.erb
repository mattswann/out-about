<!DOCTYPE html>
<html>
<head>
  <title>OutAndAbout</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => false %>
  <%= csrf_meta_tags %>
  <link href="//maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>

<div class="container_login">
  <div id="fb-img">
    <% if user_signed_in? %>
    <% fb = Koala::Facebook::API.new(session["token"]).get_object("me?fields=name,picture") %>
    <img id="fb-img" src="<%= fb["picture"]["data"]["url"] %>" alt="">
  </div>

  <div id="username">
    <%= fb["name"] %>

    <% elsif fb = 'nil' %>

    <% end %>
    <p><%= link_to 'logout', destroy_user_session_path, :data => { :confirm => 'are you sure?'} %></p>
  </div>

</div>


<%= yield %>



</body>

</html>
